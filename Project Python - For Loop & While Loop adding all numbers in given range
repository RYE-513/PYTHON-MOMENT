# FOR LOOP ADDING ALL NUMBERS

total = 0 # given value as 0
for i in range(1, 5):
    total += i # the 0 increment by i 
print(total) # so 1 + 2 + 3 + 4 + 5

print()

# WHILE LOOP ADDING ALL NUMBERS

total2 = 0
j = 1 # value of 1
while j < 5:  
    total2 += j # 0 += 1
    j += 1 # 1 +1
print(total2) # so 1 + 2 + 3 + 4 + 5

print()

# WHILE LOOP ADDING ALL ITEMS IN ARRAY WITHT NEGATIVE NUMBER

given_list = [5, 4, 4, 3, 1, -2 ,-3 ,-5] # theres no error if theres one number with negative number

total3 = 0
i = 0 # first index
while given_list[i] > 0:
    total3 += given_list[i] # add the first element '5' given_list[i]
    i += 1 # then proceed to '4' next item
print(total3) # all the items is equal to 17

# WHILE LOOP ADDING ALL ITEMS IN ARRAY WITHOUT NEGATIVE NUMBER

given_list2 = [5, 4, 4, 3, 1]
# IndexError out of range if the array item has no negative number

total4 = 0
ai = 0 # first index
while ai < len(given_list2) and given_list2[ai] > 0: # nothing exist in index 5
# ai < len(given_list2) is added
    total4 += given_list2[ai]
    ai += 1 # then proceed to '4' next item
print(total4)


# ADDING ALL ITEMS IN ARRAY USING FOR LOOP

given_list3 = [5, 4, 4, 3, 1, -2 ,-3 ,-5] 

total5 = 0
for element in given_list3:
    if element <= 0:
        break
    total5 += element
print(total5)

# ADDING ALL ITEMS IN ARRAY USING WHILE LOOP WITH IF STATEMENT

given_list4 = [5, 4, 4, 3, 1, -2 ,-3 ,-5]

total6 = 0
ii = 0

while True:
    total6 += given_list4[ii]
    ii += 1
    if given_list4[ii] <= 0:
        break
print(total6)




