# Second File

class Person :
     def __init__(self, name, age) :
             self.name = name
             self.age = age
             print("Creating "+name)
     
      def getInfo(self) :
             print (f"\nName: {self.name}\nAge: {self.age}" )

class Student(Person) :

      def getInfo(Self) :
             print (f"\nStudent Name: {self.name}\nAge: {self.age}" )


p = Person("Keith", 20)
s = Student("Theo", 22)
p.getInfo()
s.getInfo()
