___________
SUMMARY 1
___________

fruits = ['apple', 'banana', 'strawberry']

for i in fruits :
   count = len(i)
print(f"the fruit is {i}") # "the fruits is strawberry"

___________
SUMMARY 2
___________

fruits = ['apple', 'banana', 'strawberry']

for i in fruits :
print(f"the fruits are {i}") # the fruits are apple... banana... strawberry...

___________
SUMMARY 3
___________

fruits = ['apple', 'banana', 'strawberry']

for i in fruits :
   count = len(i)
   print(f"{i} has a {count} letters")
   
___________
SUMMARY 4
___________

fruits = ['apple', 'banana', 'strawberry']

for x in fruits :
  print(x)
  if x == 'banana' :
     print("banana has been found")
     break # use to hide the last item in array "strawberry"
