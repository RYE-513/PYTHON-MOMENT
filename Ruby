month = 5

case month

when 1

  puts 'JANUARY'

when 2

  puts 'FEBRUARY'

when 3 

  puts 'MARCH'

when 4

  puts 'APRIL'

when 5

  puts 'MAY'

when 6

  puts 'JUNE'

when 7

  puts 'JULY'

when 8

  puts 'AUGUST'

when 9

  puts 'SEPTEMBER'

when 10

  puts 'OCTOBER'

when 11

  puts 'NOVEMBER'

when 12

   puts 'DECEMBER'

else  

  puts "END"

end  
