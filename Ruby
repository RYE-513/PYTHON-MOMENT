require 'date' 

current_date = Date.today-year

puts "enter your birth year: " 

your_birthday = gets.chomp.to_i

age = current_date - your_birthday

case age 

when 0.. 12

puts "minor" 

when 12 .. 18

puts "youth" 

else

puts "adult" 

end

