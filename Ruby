puts "RYAN: ENTER YOUR AGE"

age = 21

if age >= 19 && age <=100

  puts "YOU ARE AT THE LEGAL AGE"

else if age >=12 && age <=18

  puts "YOU ARE BELOW 18"

else age

  puts "INVALID"

end

end

